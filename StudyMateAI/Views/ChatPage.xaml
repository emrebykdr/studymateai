<Page x:Class="StudyMateAI.Views.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:helpers="clr-namespace:StudyMateAI.Helpers"
      Title="AI Asistan">
    <Page.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" materialDesign:ElevationAssist.Elevation="Dp4" Background="{DynamicResource SlateDarkBrush}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Robot" 
                                           Width="32" 
                                           Height="32" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AI Asistan" 
                                 FontSize="20" 
                                 FontWeight="Bold"/>
                        <TextBlock Text="Ollama ile güçlendirilmiştir" 
                                 FontSize="12" 
                                 Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="Geçmişi Temizle"
                        Command="{Binding ClearHistoryCommand}">
                    <materialDesign:PackIcon Kind="DeleteSweep" Width="24" Height="24"/>
                </Button>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Messages Area -->
        <ScrollViewer Grid.Row="1" 
                     x:Name="MessageScrollViewer"
                     VerticalScrollBarVisibility="Auto"
                     Padding="16">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,16">
                            <!-- User Message -->
                            <Border Background="{DynamicResource PrimaryHueMidBrush}"
                                   CornerRadius="12"
                                   Padding="12"
                                   MaxWidth="500"
                                   HorizontalAlignment="Right"
                                   Margin="50,0,0,8">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UserMessage, Converter={StaticResource NullToVisibilityConverter}}" Value="Visible">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding UserMessage}"
                                         TextWrapping="Wrap"
                                         Foreground="White"
                                         FontSize="14"/>
                            </Border>

                            <!-- AI Response -->
                            <Border Background="{DynamicResource SlateDarkBrush}"
                                   CornerRadius="12"
                                   Padding="12"
                                   MaxWidth="500"
                                   HorizontalAlignment="Left"
                                   materialDesign:ElevationAssist.Elevation="Dp2"
                                   Margin="0,0,50,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AIResponse, Converter={StaticResource NullToVisibilityConverter}}" Value="Visible">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsError}" Value="True">
                                                <Setter Property="Background" Value="#B00020"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <TextBlock Text="{Binding AIResponse}"
                                             TextWrapping="Wrap"
                                             FontSize="14"/>
                                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}"
                                             FontSize="10"
                                             Opacity="0.6"
                                             Margin="0,4,0,0"
                                             HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Loading Indicator -->
        <StackPanel Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <ProgressBar IsIndeterminate="True"
                        Width="48"
                        Height="48"/>
            <TextBlock Text="AI düşünüyor..."
                      Margin="0,8,0,0"
                      FontSize="14"
                      Opacity="0.7"/>
        </StackPanel>

        <!-- Input Area -->
        <materialDesign:Card Grid.Row="2" 
                            Background="{DynamicResource SlateDarkBrush}" 
                            Margin="16"
                            Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                        x:Name="InputTextBox"
                        Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="Mesajınızı yazın..."
                        Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                        AcceptsReturn="False"
                        MaxLength="2000"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Padding="8">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1"
                       Width="40" Height="40"
                       Command="{Binding SendMessageCommand}"
                       Style="{DynamicResource NeonGlowButton}"
                       ToolTip="Gönder (Enter)"
                       Margin="8,0,0,0">
                    <materialDesign:PackIcon Kind="Send" Width="20" Height="20" Foreground="#0B1120"/>
                </Button>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
