<Page x:Class="StudyMateAI.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Title="Dashboard">
    
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.4"
                                   EasingFunction="{StaticResource EaseOut}"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            
            <!-- Welcome Card with Gradient -->
            <materialDesign:Card Margin="0,0,0,20" Padding="24">
                <materialDesign:Card.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E293B" Offset="0"/>
                        <GradientStop Color="#0F766E" Offset="1"/>
                    </LinearGradientBrush>
                </materialDesign:Card.Background>
                <StackPanel>
                    <TextBlock Text="HoÅŸ Geldin! ðŸ‘‹" 
                              Style="{StaticResource H1}"
                              Margin="0,0,0,8"/>
                    <Border Height="3" 
                           Width="100" 
                           Background="{DynamicResource CyberTealBrush}" 
                           HorizontalAlignment="Left" 
                           CornerRadius="2" 
                           Margin="0,0,0,12">
                        <Border.Effect>
                            <DropShadowEffect Color="#2DD4BF" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    <TextBlock x:Name="WelcomeText"
                              Text="BugÃ¼n ne Ã§alÄ±ÅŸmak istersin?" 
                              Style="{StaticResource Subtitle}"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Stats Cards -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Courses -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="20" Background="{DynamicResource SlateDarkBrush}">
                    <materialDesign:Card.Style>
                        <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </materialDesign:Card.Style>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="BookOpenPageVariant" 
                                                Width="40" 
                                                Height="40" 
                                                Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock x:Name="TotalCoursesText" 
                                  Text="0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="{DynamicResource CyberTealBrush}"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="Toplam Ders" 
                                  FontSize="14" 
                                  Opacity="0.9"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Average Grade -->
                <materialDesign:Card Grid.Column="1" Margin="5,0,5,0" Padding="20" Background="{DynamicResource SlateDarkBrush}">
                    <materialDesign:Card.Style>
                        <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </materialDesign:Card.Style>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ChartLine" 
                                                Width="40" 
                                                Height="40" 
                                                Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                        <TextBlock x:Name="AverageGradeText" 
                                  Text="0.0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="{DynamicResource NeonCoralBrush}"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="Ortalama Not" 
                                  FontSize="14" 
                                  Opacity="0.9"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Documents -->
                <materialDesign:Card Grid.Column="2" Margin="10,0,0,0" Padding="20" Background="{DynamicResource SlateDarkBrush}">
                    <materialDesign:Card.Style>
                        <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </materialDesign:Card.Style>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="FileDocument" 
                                                Width="40" 
                                                Height="40" 
                                                Foreground="#FF9800"/>
                        <TextBlock x:Name="TotalDocumentsText" 
                                  Text="0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="#FF9800"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="DÃ¶kÃ¼man" 
                                  FontSize="14" 
                                  Opacity="0.9"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Active Courses -->
            <materialDesign:Card Padding="20" Margin="0,0,0,20" Background="{DynamicResource SlateDarkBrush}">
                <StackPanel>
                    <TextBlock Text="Aktif Dersler" 
                              Style="{StaticResource H2}"/>
                    
                    <ListView x:Name="ActiveCoursesListView" 
                             MaxHeight="300"
                             SelectionMode="Single"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" 
                                       BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                       BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="16" 
                                                      FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Code}" 
                                                      FontSize="12" 
                                                      Opacity="0.7" 
                                                      Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" 
                                                   Orientation="Horizontal" 
                                                   VerticalAlignment="Center">
                                            <TextBlock Text="Vize: " 
                                                      FontSize="14" 
                                                      Opacity="0.9"/>
                                            <TextBlock Text="{Binding MidtermGrade}" 
                                                      FontSize="14" 
                                                      FontWeight="Bold" 
                                                      Margin="5,0,20,0"/>
                                            
                                            <TextBlock Text="Gerekli Final: " 
                                                      FontSize="14" 
                                                      Opacity="0.9"/>
                                            <TextBlock Text="{Binding RequiredFinalGrade}" 
                                                      FontSize="14" 
                                                      FontWeight="Bold" 
                                                      Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <TextBlock x:Name="NoCoursesText" 
                              Text="HenÃ¼z ders eklenmemiÅŸ. 'Derslerim' sayfasÄ±ndan ders ekleyebilirsin." 
                              TextAlignment="Center" 
                              Opacity="0.5" 
                              Margin="0,20,0,0"
                              Visibility="Collapsed"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Ollama Status -->
            <materialDesign:Card Padding="20" Background="{DynamicResource SlateDarkBrush}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon x:Name="OllamaStatusIcon" 
                                            Kind="Circle" 
                                            Width="16" 
                                            Height="16" 
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock x:Name="OllamaStatusText" 
                               Text="Ollama durumu kontrol ediliyor..." 
                               FontSize="14" 
                               Margin="10,0,0,0" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>
</Page>
