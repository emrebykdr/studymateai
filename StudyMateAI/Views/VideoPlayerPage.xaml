<Page x:Class="StudyMateAI.Views.VideoPlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Title="Video Oynatıcı"
      Background="{DynamicResource MaterialDesignPaper}">
    
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.4"
                                   EasingFunction="{StaticResource EaseOut}"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    
    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content -->
        <Grid Grid.Column="0" Margin="0,0,16,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Padding="24" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Video Oynatıcı" Style="{StaticResource H2}"/>
                        <TextBlock Text="Ders videolarını izle ve analiz et" Style="{StaticResource Subtitle}" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBox x:Name="UrlTextBox"
                                 materialDesign:HintAssist.Hint="YouTube Video URL'si"
                                 Width="400"
                                 Margin="0,0,8,0"
                                 Background="#1E293B"
                                 Text="{Binding VideoUrl, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Yükle"
                                Command="{Binding LoadVideoCommand}"
                                Style="{DynamicResource NeonGlowButton}"
                                Margin="0,0,8,0"/>
                        <Button Content="Kaydet"
                                Style="{DynamicResource NeonGlowButton}"
                                Command="{Binding SaveVideoCommand}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentVideo.Title}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentVideo.Duration, StringFormat='Süre: {0} dk'}" 
                               Foreground="Gray" 
                               FontSize="11"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Video Player -->
        <materialDesign:Card Grid.Row="1" Padding="0" Margin="0,0,0,16">
            <wv2:WebView2 x:Name="VideoWebView"/>
        </materialDesign:Card>

        <!-- AI Chat Panel -->
        <materialDesign:Card Grid.Row="2" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="AI Asistan" 
                           Style="{StaticResource H2}"
                           VerticalAlignment="Center"/>
                    <Button Grid.Column="1"
                            Content="Videoyu Özetle"
                            Command="{Binding SummarizeVideoCommand}"
                            Style="{DynamicResource NeonGlowButton}"
                            Height="30"
                            Padding="10,0"
                            ToolTip="Videonun özetini çıkarır (sadece altyazılı videolarda çalışır)"/>
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ChatMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="0,4">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Role}" 
                                                   FontWeight="Bold" 
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                        <TextBlock Text="{Binding Content}" 
                                                   TextWrapping="Wrap" 
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Grid Grid.Row="2" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                         <Button Command="{Binding AnalyzeScreenCommand}"
                                 Style="{DynamicResource MaterialDesignOutlinedButton}"
                                 Padding="8,4"
                                 Height="32"
                                 Margin="0,0,8,0"
                                 ToolTip="O anki ekran görüntüsünü analiz et">
                             <StackPanel Orientation="Horizontal">
                                 <materialDesign:PackIcon Kind="MonitorScreenshot" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                 <TextBlock Text="Ekranı Analiz Et"/>
                             </StackPanel>
                         </Button>
                         <TextBox x:Name="QuestionTextBox"
                                  materialDesign:HintAssist.Hint="Sorunuzu yazın..."
                                  Text="{Binding CurrentQuestion, UpdateSourceTrigger=PropertyChanged}"
                                  AcceptsReturn="False"
                                  Background="#1E293B"
                                  Width="350"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Content="Gönder"
                            Command="{Binding AskQuestionCommand}"
                            Style="{DynamicResource NeonGlowButton}"
                            Margin="8,0,0,0"/>
                </Grid>
            </Grid>
        </materialDesign:Card>
        </Grid>
        
        <!-- Saved Videos Sidebar -->
        <materialDesign:Card Grid.Column="1" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="Kaydedilen Videolar" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,12"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SavedVideos}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" CornerRadius="4" Margin="0,0,0,8" Background="{DynamicResource SlateDarkBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Load Video Button (Main Area) -->
                                        <Button Grid.Column="0"
                                                Command="{Binding DataContext.LoadSavedVideoCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalContentAlignment="Left"
                                                Padding="8"
                                                Height="Auto">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                    <materialDesign:PackIcon Kind="PlayCircle" 
                                                                            Width="18" 
                                                                            Height="18" 
                                                                            Foreground="{DynamicResource CyberTealBrush}"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Title}" 
                                                              FontWeight="SemiBold" 
                                                              TextWrapping="Wrap"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource MaterialDesignBody}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding DateAdded, StringFormat='dd/MM/yyyy HH:mm'}" 
                                                          Foreground="Gray" 
                                                          FontSize="10"
                                                          Margin="0,0,0,0"/>
                                            </StackPanel>
                                        </Button>

                                        <!-- Edit Button -->
                                        <Button Grid.Column="1"
                                                Command="{Binding DataContext.EditVideoTitleCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Width="30"
                                                Height="30"
                                                Padding="0"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right"
                                                Margin="0,4,4,0"
                                                ToolTip="İsmi Düzenle">
                                            <TextBlock Text="✏️" FontSize="14"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
