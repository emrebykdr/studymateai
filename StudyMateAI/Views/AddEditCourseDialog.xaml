<Window x:Class="StudyMateAI.Views.AddEditCourseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Ders Ekle/Düzenle" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                  Text="Ders Bilgileri" 
                  FontSize="24" 
                  FontWeight="Bold" 
                  Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Ders Adı" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource MaterialDesignBody}"/>
                <TextBox x:Name="CourseNameTextBox" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Ders Kodu" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource MaterialDesignBody}"/>
                <TextBox x:Name="CourseCodeTextBox" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Kredi" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource MaterialDesignBody}"/>
                <TextBox x:Name="CreditTextBox" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Vize Notu (0-100)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource MaterialDesignBody}"/>
                <TextBox x:Name="MidtermGradeTextBox" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
            </StackPanel>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Vize % (örn: 40)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource MaterialDesignBody}"/>
                    <TextBox x:Name="MidtermPercentageTextBox" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Final % (örn: 60)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource MaterialDesignBody}"/>
                    <TextBox x:Name="FinalPercentageTextBox" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="* Tüm alanları doldurmanız önerilir" 
                      FontSize="11" 
                      Opacity="0.5" 
                      Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="İPTAL" 
                   Click="CancelButton_Click"
                   Margin="0,0,10,0"
                   Width="100"
                   Style="{DynamicResource MaterialDesignOutlinedButton}"/>
            <Button Content="KAYDET" 
                   Click="SaveButton_Click"
                   Width="100"
                   Style="{DynamicResource NeonGlowButton}"/>
        </StackPanel>
    </Grid>
</Window>
